<%= form_for [:admin, @course] do |f| %>
  <div><%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div><%= f.label :description %><br />
  <%= f.text_area :description %></div>

  <div><%= f.label :start_date %><br />
    <%= f.text_field :start_date %></div>

  <div><%= f.label :end_date %><br />
    <%= f.text_field :end_date %></div>

  <div><%= f.submit "Save Course", class: 'btn btn-primary' %></div>
<% end %>
